<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>GST Calculator</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/GSTC1.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<%- include('partials/navbar') %>
<body>
  <div class="container calculator-box mt-5">
    <h3 class="text-center mb-3">GST Calculator</h3>

    <div class="row g-2">
      <div class="col-md-6">
        <label class="form-label">Enter Amount (â‚¹)</label>
        <input type="number" class="form-control" id="amount" placeholder="e.g. 1000">
      </div>
      <div class="col-md-6">
        <label class="form-label">GST Rate</label>
        <select class="form-select" id="gstRate">
          <option value="0">0%</option>
          <option value="5">5%</option>
          <option value="12">12%</option>
          <option value="18" selected>18%</option>
          <option value="28">28%</option>
        </select>
      </div>
      <div class="col-md-6">
        <label class="form-label">Mode</label>
        <select class="form-select" id="gstMode">
          <option value="add" selected>Add GST</option>
          <option value="remove">Remove GST</option>
        </select>
      </div>
    </div>

    <div class="d-grid mt-3">
      <button class="btn btn-primary" onclick="calculateGST()">Calculate</button>
    </div>

    <div id="gstResult" class="mt-4 alert alert-info d-none small"></div>

    <canvas id="gstChart" class="mt-4 w-100" height="300"></canvas>
  </div>

  <script src="/js/GSTC1.js"></script>
  <%- include('partials/footer') %>
</body>
</html>
