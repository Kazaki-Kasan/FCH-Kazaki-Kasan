<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Investment Calculator</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/IV1.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<%- include('partials/navbar') %>
<body>
  <div class="container calculator-box mt-5">
    <h3 class="text-center mb-3">Investment Calculator</h3>

    <div class="row g-2">
      <div class="col-md-6">
        <label class="form-label">Initial Investment (₹)</label>
        <input type="number" class="form-control" id="initialInvestment" placeholder="e.g. 20000">
      </div>
      <div class="col-md-6">
        <label class="form-label">Annual Contribution (₹)</label>
        <input type="number" class="form-control" id="annualContribution" placeholder="e.g. 5000">
      </div>
      <div class="col-md-6">
        <label class="form-label">Monthly Contribution (₹)</label>
        <input type="number" class="form-control" id="monthlyContribution" placeholder="e.g. 0">
      </div>
      <div class="col-md-6">
        <label class="form-label">Contribution Timing</label>
        <select class="form-select" id="contributionTiming">
          <option value="end">End of Period</option>
          <option value="beginning">Beginning of Period</option>
        </select>
      </div>
      <div class="col-md-6">
        <label class="form-label">Interest Rate (%)</label>
        <input type="number" class="form-control" id="interestRate" placeholder="e.g. 5">
      </div>
      <div class="col-md-6">
        <label class="form-label">Compound Frequency</label>
        <select class="form-select" id="compoundFrequency">
          <option value="1">Annually</option>
          <option value="2">Semi-Annually</option>
          <option value="4">Quarterly</option>
          <option value="12">Monthly</option>
          <option value="365">Daily</option>
        </select>
      </div>
      <div class="col-md-6">
        <label class="form-label">Investment Length</label>
        <div class="input-group">
          <input type="number" class="form-control" id="years" placeholder="Years">
          <input type="number" class="form-control" id="months" placeholder="Months">
        </div>
      </div>
      <div class="col-md-3">
        <label class="form-label">Tax Rate (%)</label>
        <input type="number" class="form-control" id="taxRate" placeholder="Optional">
      </div>
      <div class="col-md-3">
        <label class="form-label">Inflation Rate (%)</label>
        <input type="number" class="form-control" id="inflationRate" placeholder="Optional">
      </div>
    </div>

    <div class="d-grid mt-3">
      <button class="btn btn-primary" onclick="calculateInvestment()">Calculate</button>
    </div>

    <div id="resultBox" class="mt-4 alert alert-info d-none small"></div>

    <canvas id="investmentChart" class="mt-4 w-100" height="300"></canvas>
    <canvas id="barChart" class="mt-4 w-100" height="300"></canvas>
  </div>

  <script src="/js/IV1.js"></script>
  <%- include('partials/footer') %>
</body>
</html>
