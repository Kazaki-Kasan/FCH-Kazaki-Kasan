<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Mortgage Calculator</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/MC1.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<%- include('partials/navbar') %>
<body>
  <div class="container calculator-box mt-5">
    <h3 class="text-center mb-3">Mortgage Calculator</h3>

    <div class="row g-2">
      <div class="col-md-6">
        <label class="form-label">Loan Amount (â‚¹)</label>
        <input type="number" class="form-control" id="loanAmount" placeholder="e.g. 3000000">
      </div>
      <div class="col-md-6">
        <label class="form-label">Annual Interest Rate (%)</label>
        <input type="number" class="form-control" id="interestRate" placeholder="e.g. 6.75">
      </div>
      <div class="col-md-6">
        <label class="form-label">Loan Term</label>
        <div class="input-group">
          <input type="number" class="form-control" id="loanTerm" placeholder="e.g. 20">
          <select class="form-select" id="termUnit">
            <option value="years" selected>Years</option>
            <option value="months">Months</option>
          </select>
        </div>
      </div>
    </div>

    <div class="d-grid mt-3">
      <button class="btn btn-primary" onclick="calculateMortgage()">Calculate</button>
    </div>

    <div id="mortgageResult" class="mt-4 alert alert-info d-none small"></div>

    <canvas id="mortgageChart" class="mt-4 w-100" height="300"></canvas>
  </div>

  <script src="/js/MC1.js"></script>
  <%- include('partials/footer') %>
</body>
</html>
