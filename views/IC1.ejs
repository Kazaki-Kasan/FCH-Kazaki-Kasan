<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Interest Calculator</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/IC1" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<%- include('partials/navbar') %>
<body>
  <div class="container calculator-box mt-5">
    <h3 class="text-center mb-3">Simple Interest Calculator</h3>

    <div class="row g-2">
      <div class="col-md-6">
        <label class="form-label">Principal (â‚¹)</label>
        <input type="number" class="form-control" id="principal" placeholder="e.g. 10000">
      </div>
      <div class="col-md-6">
        <label class="form-label">Annual Interest Rate (%)</label>
        <input type="number" class="form-control" id="rate" placeholder="e.g. 6.5">
      </div>
      <div class="col-md-6">
        <label class="form-label">Time (Years)</label>
        <input type="number" class="form-control" id="time" placeholder="e.g. 3">
      </div>
    </div>

    <div class="d-grid mt-3">
      <button class="btn btn-primary" onclick="calculateInterest()">Calculate</button>
    </div>

    <div id="interestResult" class="mt-4 alert alert-info d-none small"></div>

    <canvas id="interestChart" class="mt-4 w-100" height="300"></canvas>
  </div>

  <script src="/js/IC1.js"></script>
  <%- include('partials/footer') %>
</body>
</html>
